{
  "name": "@leadof-containers/playwright",
  "private": true,
  "version": "1.0.0",
  "description": "",
  "keywords": [],
  "author": "",
  "license": "UNLICENSED",
  "scripts": {
    "container:build": "wireit",
    "container:deploy": "wireit",
    "clean": "wireit"
  },
  "wireit": {
    "container:build": {
      "command": "node ./build",
      "dependencies": [
        "../../libraries/node:build"
      ],
      "files": [
        "../../../.nvmrc",
        "../../../.npm-version",
        "../../../.pnpm-version",
        "./src/*",
        "./build.js",
        "./makefile",
        "./package.json"
      ],
      "output": [
        ".task-output/build.js/*"
      ]
    },
    "container:deploy": {
      "command": "node ./deploy",
      "dependencies": [
        "../../libraries/node:build",
        "container:build"
      ],
      "files": [
        "../../../.nvmrc",
        "../../../.npm-version",
        "../../../.pnpm-version",
        "./src/*",
        "./build.js",
        "./makefile",
        "./package.json"
      ],
      "output": [
        ".task-output/deploy.js/*"
      ]
    },
    "clean": {
      "command": "make clean"
    }
  },
  "devDependencies": {
    "dotenv": "^16.3.1",
    "wireit": "^0.10.0"
  }
}
