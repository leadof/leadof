{
  "name": "@leadof/all",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "author": "Eric Swanson",
  "license": "UNLICENSED",
  "scripts": {
    "prepare": "husky install",
    "local:prerequisites": "wireit",
    "local:spelling": "cspell --config ./cspell.yaml --no-color **",
    "local:format": "prettier --write --ignore-path ./.prettierignore ./",
    "local:lint": "prettier --check --ignore-path ./.prettierignore ./",
    "local:lint:changes": "pretty-quick --staged",
    "container:dependencies": "wireit",
    "container:src": "wireit",
    "container:spelling": "wireit",
    "container:lint": "wireit",
    "container:check": "wireit",
    "build:containers": "wireit",
    "check:all": "wireit",
    "build:all": "wireit",
    "all": "wireit",
    "clean": "wireit"
  },
  "wireit": {
    "local:prerequisites": {
      "command": "make prerequisites",
      "files": [
        "./.npm-version",
        "./.nvmrc",
        "./.pnpm-version",
        "./package.json",
        "./prerequisites.dev.sh",
        "./prerequisites.sh"
      ],
      "output": [
        "./test-results/prerequisites.txt"
      ]
    },
    "container:dependencies": {
      "command": "make install-dependencies",
      "dependencies": [
        "./src/containers/node:build"
      ],
      "files": [
        "**/package.json",
        "./pnpm-lock.yaml",
        "./pnpm-workspace.yaml",
        "./install-dependencies.containerfile",
        "./install-dependencies.sh"
      ],
      "output": [
        "dist/dependencies-container_digest.txt"
      ]
    },
    "container:src": {
      "command": "make install-src",
      "dependencies": [
        "container:dependencies",
        "./src/containers/libraries:build",
        "./src/containers/node:build"
      ],
      "files": [
        "./*",
        "!**/.angular",
        "!**/.containers",
        "!**/.wireit",
        "!**/dist",
        "!**/node_modules",
        "!**/test-results",
        "!**/.containerignore",
        "!**/*.containerfile",
        "!**/*.drawio",
        "!./src/docs/",
        "!./src/gh/",
        "!./src/media/",
        "install-src.containerfile"
      ],
      "output": [
        "dist/src-container_digest.txt"
      ]
    },
    "build:containers": {
      "dependencies": [
        "./src/containers/libraries:build",
        "./src/containers/node:build",
        "./src/containers/node-chrome:build",
        "./src/containers/playwright:build",
        "./src/containers/smol:build"
      ]
    },
    "container:lint": {
      "command": "make check-lint",
      "dependencies": [
        "container:src",
        "./src/containers/smol:build"
      ],
      "files": [
        "./*",
        "!**/.angular",
        "!**/.containers",
        "!**/.wireit",
        "!**/dist",
        "!**/node_modules",
        "!**/test-results"
      ],
      "output": [
        "dist/lint-container_digest.txt"
      ]
    },
    "container:spelling": {
      "command": "make check-spelling",
      "dependencies": [
        "container:src",
        "./src/containers/smol:build"
      ],
      "files": [
        "./*",
        "!**/.angular",
        "!**/.containers",
        "!**/.wireit",
        "!**/dist",
        "!**/node_modules",
        "!**/test-results"
      ],
      "output": [
        "dist/spelling-container_digest.txt"
      ]
    },
    "container:check": {
      "dependencies": [
        "container:lint",
        "container:spelling"
      ]
    },
    "check:all": {
      "dependencies": [
        "container:check",
        "./src/apps/leadof-us:check"
      ]
    },
    "build:all": {
      "dependencies": [
        "build:containers",
        "./src/apps/leadof-us:build"
      ]
    },
    "all": {
      "dependencies": [
        "prerequisites",
        "check:all",
        "build:all"
      ]
    },
    "clean": {
      "command": "make clean"
    }
  },
  "devDependencies": {
    "cspell": "^6.31.1",
    "husky": "^8.0.3",
    "madr": "^3.0.0",
    "prettier": "^2.8.8",
    "pretty-quick": "^3.1.3",
    "wireit": "^0.9.5"
  }
}
