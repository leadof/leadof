{
  "name": "@leadof/all",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "author": "Eric Swanson",
  "license": "UNLICENSED",
  "scripts": {
    "spellcheck": "cspell --config ./cspell.yaml --color **",
    "format": "prettier --write --ignore-path ./.prettierignore ./",
    "lint": "prettier --check --ignore-path ./.prettierignore ./",
    "prepare": "husky install",
    "container:lint": "wireit",
    "container:spelling": "wireit",
    "container:check": "wireit"
  },
  "wireit": {
    "container:lint": {
      "command": "make check-lint",
      "files": [
        "./*",
        "!**/.angular",
        "!**/.wireit",
        "!**/dist",
        "!**/node_modules",
        "!**/test-results"
      ],
      "output": [
        "test-results/lint/container-digest.txt"
      ]
    },
    "container:spelling": {
      "command": "make check-spelling",
      "files": [
        "./*",
        "!**/.angular",
        "!**/.wireit",
        "!**/dist",
        "!**/node_modules",
        "!**/test-results"
      ],
      "output": [
        "test-results/spelling/container-digest.txt"
      ]
    },
    "container:check": {
      "dependencies": [
        "container:lint",
        "container:spelling"
      ]
    }
  },
  "devDependencies": {
    "cspell": "^6.31.1",
    "husky": "^8.0.3",
    "madr": "^3.0.0",
    "prettier": "^2.8.8",
    "pretty-quick": "^3.1.3",
    "wireit": "^0.9.5"
  }
}
